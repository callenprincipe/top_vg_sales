
<%= link_to "Back to Genres", genres_path%>

<h2 class="title is-2">Top Sold Video Games in <%= @genre.name %></h2>


 <div class="columns is-multiline">
      <% @genre.videogames.each do |videogame| %>
        <div class="column is-one-third">
          <div class="box">
            <p class="subtitle">Rank: <%= videogame.rank %></p>
            <p class="title">
              <%= link_to videogame.name, videogame, class: 'has-text-info' %>
            </p>
          </div>
        </div>
      <% end %>
  </div>
