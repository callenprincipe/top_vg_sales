
<h1 class="title is-1">Genres</h1>

<div class="columns is-multiline" id="genres">
  <% @genres.each do |genre| %>
    <div class="column is-one-third">
      <div class="box">
        <p class="subtitle is-4">
          <%= link_to genre.name, genre, class: "has-text-info" %>
        </p>
      </div>
    </div>
  <% end %>
</div>